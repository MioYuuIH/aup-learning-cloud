# Auto detect text files and normalize line endings to LF on checkin
* text=auto eol=lf

# Python source files
*.pxd    text diff=python
*.py     text diff=python
*.py3    text diff=python
*.pyw    text diff=python
*.pyx    text diff=python
*.pyz    text diff=python
*.pyi    text diff=python

# JavaScript/TypeScript
*.js     text eol=lf
*.jsx    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.vue    text eol=lf
*.json   text eol=lf
*.mjs    text eol=lf
*.cjs    text eol=lf

# YAML/Config
*.yaml   text eol=lf
*.yml    text eol=lf
*.toml   text eol=lf
*.ini    text eol=lf
*.cfg    text eol=lf

# Shell scripts
*.sh     text eol=lf
*.bash   text eol=lf

# Documentation
*.md     text eol=lf diff=markdown
*.rst    text eol=lf
*.txt    text eol=lf

# Jupyter notebooks
*.ipynb  text eol=lf

# Git config files
.gitignore      text eol=lf
.gitattributes  text eol=lf
.gitmodules     text eol=lf

# Python binary files
*.db     binary
*.p      binary
*.pkl    binary
*.pickle binary
*.pyc    binary export-ignore
*.pyo    binary export-ignore
*.pyd    binary

# Images
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.svg    binary

# Archives
*.zip    binary
*.tar    binary
*.gz     binary
*.tgz    binary
*.bz2    binary
*.7z     binary

# PDFs
*.pdf    binary
